@model WebBanHang1.Models.HangHoa
@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<div class="container mt-4">
    <h2>Xóa sản phẩm</h2>
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Thông tin sản phẩm</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Mã sản phẩm</dt>
                <dd class="col-sm-10">@Model.MaHh</dd>
                <dt class="col-sm-2">Tên sản phẩm</dt>
                <dd class="col-sm-10">@Model.TenHh</dd>
                <dt class="col-sm-2">Giá</dt>
                <dd class="col-sm-10">@Model.DonGia.ToString("N0") VNĐ</dd>
                <dt class="col-sm-2">Nhà cung cấp</dt>
                <dd class="col-sm-10">@Model.MaNccNavigation?.TenCongTy</dd>
                <dt class="col-sm-2">Mô tả</dt>
                <dd class="col-sm-10">@Model.MoTa</dd>
            </dl>

            <form asp-action="Delete" asp-controller="Products" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="MaHh" />
                <div class="mt-3">
                    <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
                    <a asp-action="Products" class="btn btn-secondary ml-2">Hủy</a>
                </div>
            </form>
        </div>
    </div>
</div>