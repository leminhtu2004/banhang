@model WebBanHang1.Models.HangHoa
@{
    ViewBag.Title = "Thêm sản phẩm";
}
<h2>Thêm sản phẩm</h2>
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}
<form asp-controller="Products" asp-action="Create" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(m => m.TenHh)
        @Html.TextBoxFor(m => m.TenHh, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.TenHh)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DonGia)
        @Html.TextBoxFor(m => m.DonGia, new { @class = "form-control", type = "number", step = "0.01" })
        @Html.ValidationMessageFor(m => m.DonGia)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.MoTa)
        @Html.TextAreaFor(m => m.MoTa, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.MoTa)
    </div>
    <div class="form-group">
        <label asp-for="Hinh" class="control-label">Hình ảnh</label>
        <input type="file" name="imageFile" class="form-control" accept="image/*" />
        @if (!string.IsNullOrEmpty(Model?.Hinh))
        {
            <img src="~/images/@Model.Hinh" style="max-width: 200px; margin-top: 10px;" alt="Hình ảnh sản phẩm" />
        }
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NgaySx)
        @Html.TextBoxFor(m => m.NgaySx, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        @Html.ValidationMessageFor(m => m.NgaySx)
    </div>
    <div class="form-group">
        <label asp-for="MaLoai" class="control-label">Loại sản phẩm</label>
        <select asp-for="MaLoai" class="form-control" asp-items="ViewBag.MaLoai">
            <option value="">-- Chọn loại sản phẩm --</option>
        </select>
        <span asp-validation-for="MaLoai" class="text-danger"></span>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GiamGia)
        @Html.TextBoxFor(m => m.GiamGia, new { @class = "form-control", type = "number", step = "0.01" })
        @Html.ValidationMessageFor(m => m.GiamGia)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SoLanXem)
        @Html.TextBoxFor(m => m.SoLanXem, new { @class = "form-control", type = "number" })
        @Html.ValidationMessageFor(m => m.SoLanXem)
    </div>
    <div class="form-group">
        <label asp-for="MaNcc" class="control-label">Nhà cung cấp</label>
        <select asp-for="MaNcc" class="form-control" asp-items="ViewBag.MaNcc">
            <option value="">-- Chọn nhà cung cấp --</option>
        </select>
        <span asp-validation-for="MaNcc" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Thêm sản phẩm</button>
</form>