@model WebBanHang1.Models.HangHoa

@{
    ViewData["Title"] = "Sửa sản phẩm";
}

<h2>Sửa sản phẩm</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

<form asp-action="Edit" asp-controller="Products" method="post" enctype="multipart/form-data">
    <input asp-for="MaHh" type="hidden" />

    <div class="form-group">
        <label asp-for="TenHh"></label>
        <input asp-for="TenHh" class="form-control" />
        <span asp-validation-for="TenHh" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DonGia"></label>
        <input asp-for="DonGia" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="DonGia" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MoTa"></label>
        <textarea asp-for="MoTa" class="form-control"></textarea>
        <span asp-validation-for="MoTa" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Hinh" class="control-label">Hình ảnh</label>
        <input type="file" name="imageFile" class="form-control" accept="image/*" />
        @if (!string.IsNullOrEmpty(Model?.Hinh))
        {
            <img src="~/images/@Model.Hinh" style="max-width: 200px; margin-top: 10px;" alt="Hình ảnh sản phẩm" />
        }
    </div>
    <div class="form-group">
        <label asp-for="MaLoai" class="control-label">Loại sản phẩm</label>
        <select asp-for="MaLoai" class="form-control" asp-items="ViewBag.MaLoai">
            <option value="">-- Chọn loại sản phẩm --</option>
        </select>
        <span asp-validation-for="MaLoai" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NgaySx"></label>
        <input asp-for="NgaySx" type="date" class="form-control" />
        <span asp-validation-for="NgaySx" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GiamGia"></label>
        <input asp-for="GiamGia" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="GiamGia" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SoLanXem"></label>
        <input asp-for="SoLanXem" type="number" class="form-control" />
        <span asp-validation-for="SoLanXem" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SoLuong"></label>
        <input asp-for="SoLuong" type="number" class="form-control" />
        <span asp-validation-for="SoLuong" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Nhà cung cấp</label>
        <select asp-for="MaNcc" asp-items="ViewBag.MaNcc" class="form-control">
            <option value="">Chọn nhà cung cấp</option>
        </select>
        <span asp-validation-for="MaNcc" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật sản phẩm</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
