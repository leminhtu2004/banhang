@model IEnumerable<WebBanHang1.Models.GiamGium>

@{
    ViewData["Title"] = "Quản lý khuyến mãi";
}

<div class="container-fluid">
    <h2 class="text-center mb-4">Quản lý khuyến mãi</h2>

    <div class="row mb-3">
        <div class="col">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Tạo khuyến mãi mới
            </a>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Mã giảm giá</th>
                    <th>Loại giảm giá</th>
                    <th>Giá trị giảm</th>
                    <th>Ngày bắt đầu</th>
                    <th>Ngày kết thúc</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MaGiamGia</td>
                        <td>@item.LoaiGiamGia</td>
                        <td>@item.GiaTriGiam</td>
                        <td>@item.NgayBatDau.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@item.NgayKetThuc.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="Edit" asp-route-id="@item.MaGiamGia" class="btn btn-sm btn-info">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.MaGiamGia" class="btn btn-sm btn-primary">
                                    <i class="fas fa-info-circle"></i>
                                </a>
                                <button type="button" class="btn btn-sm btn-danger" onclick="deletePromotion('@item.MaGiamGia')">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        function deletePromotion(maGiamGia) {
            if (confirm('Bạn có chắc chắn muốn xóa khuyến mãi này?')) {
                $.ajax({
                    url: '/api/Promotion/' + maGiamGia,
                    type: 'DELETE',
                    success: function (result) {
                        location.reload();
                    },
                    error: function (error) {
                        alert('Có lỗi xảy ra khi xóa khuyến mãi!');
                    }
                });
            }
        }
    </script>
} 