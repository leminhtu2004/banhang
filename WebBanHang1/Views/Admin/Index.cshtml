@model WebBanHang1.Models.AdminViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
    var culture = new System.Globalization.CultureInfo("vi-VN");
}

<style>
    /* CSS hoàn chỉnh */
    .admin-dashboard {
        display: grid;
        grid-template-columns: 250px 1fr;
        gap: 2rem;
        min-height: 100vh;
        background: #f5f6fa;
        padding: 20px;
        font-family: 'Segoe UI', sans-serif;
    }

    .sidebar {
        background: #fff;
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.1);
        position: sticky;
        top: 20px;
        height: fit-content;
    }

        .sidebar h2 {
            color: #2d3436;
            font-size: 1.4rem;
            margin-bottom: 1.5rem;
            padding-bottom: 10px;
            border-bottom: 2px solid #eee;
        }

        .sidebar ul {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .sidebar li {
            margin-bottom: 8px;
        }

        .sidebar a {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 12px 15px;
            border-radius: 8px;
            color: #636e72;
            text-decoration: none;
            transition: all 0.3s ease;
            font-weight: 500;
        }

            .sidebar a:hover,
            .sidebar a.active {
                background: #4b7bec;
                color: white;
                transform: translateX(5px);
            }

    .admin-section {
        background: white;
        border-radius: 12px;
        padding: 25px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.1);
        animation: fadeIn 0.3s ease;
    }

    .table {
        margin-top: 20px;
        border-collapse: collapse;
        width: 100%;
        background: white;
    }

        .table th {
            background: #4b7bec;
            color: white;
            padding: 15px;
            text-align: left;
            font-weight: 600;
        }

        .table td {
            padding: 15px;
            border-bottom: 1px solid #eee;
            vertical-align: middle;
        }

        .table tr:hover {
            background-color: #f8f9fa;
        }

    .btn-primary {
        background: #4b7bec;
        border: none;
        padding: 10px 20px;
        border-radius: 6px;
        color: white;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
        font-size: 0.95rem;
    }

        .btn-primary:hover {
            background: #3867d6;
            transform: translateY(-1px);
        }

    .product-image {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 6px;
        border: 1px solid #ddd;
    }

    .status-badge {
        padding: 6px 15px;
        border-radius: 20px;
        font-size: 0.85rem;
        display: inline-block;
        width: fit-content;
    }

    .status-success {
        background: #20bf6b;
        color: white;
    }

    .status-pending {
        background: #f7b731;
        color: white;
    }

    .status-cancelled {
        background: #eb3b5a;
        color: white;
    }

    .action-buttons {
        display: flex;
        gap: 10px;
    }

    .btn-edit {
        color: #4b7bec;
        transition: opacity 0.3s;
        padding: 8px;
        border-radius: 50%;
    }

        .btn-edit:hover {
            background: #e8f0fe;
        }

    .btn-delete {
        color: #eb3b5a;
        transition: opacity 0.3s;
        padding: 8px;
        border-radius: 50%;
    }

        .btn-delete:hover {
            background: #fde8ec;
        }

    .loading-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(255, 255, 255, 0.9);
        z-index: 9999;
        justify-content: center;
        align-items: center;
        backdrop-filter: blur(3px);
    }

    .section-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
    }

    .filter-group {
        display: flex;
        gap: 15px;
        align-items: center;
    }

    .form-select {
        padding: 8px 15px;
        border-radius: 6px;
        border: 1px solid #ddd;
        background: white;
    }

    .pagination {
        display: flex;
        gap: 8px;
        margin-top: 20px;
        justify-content: center;
    }

        .pagination a {
            padding: 8px 15px;
            border-radius: 6px;
            background: #f8f9fa;
            color: #4b7bec;
            text-decoration: none;
            transition: all 0.3s ease;
        }

            .pagination a.active {
                background: #4b7bec;
                color: white;
            }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@media (max-width: 768px) {
        .admin-dashboard {
            grid-template-columns: 1fr;
            padding: 15px;
        }

        .sidebar {
            position: static;
            margin-bottom: 20px;
        }

        .admin-section {
            padding: 15px;
            overflow-x: auto;
        }

        .table {
            min-width: 600px;
        }

        .section-header {
            flex-direction: column;
            gap: 15px;
            align-items: flex-start;
        }
    }
</style>

<div class="admin-dashboard">
    <div class="sidebar">
        <h2>Quản lý</h2>
        <ul>
            <li><a href="#" class="active" data-section="statistics"><i class="fas fa-chart-line"></i>Tổng quan</a></li>
            <li><a href="#" data-section="products"><i class="fas fa-box-open"></i>Sản phẩm</a></li>
            <li><a href="#" data-section="categories"><i class="fas fa-tags"></i>Danh mục</a></li>
            <li><a href="#" data-section="orders"><i class="fas fa-receipt"></i>Đơn hàng</a></li>
            <li><a href="#" data-section="customers">
                    <i class="fas fa-users"></i> Khách hàng
                </a></li>
            <li>
                <a href="#" data-section="promotions">
                    <i class="fas fa-gift"></i> Quản lý giảm giá
                </a>
            </li>
        </ul>
    </div>

    <div class="admin-main">
        <h1>Xin chào, @User.Identity?.Name</h1>

        <!-- Loading overlay -->
        <div class="loading-overlay">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>

        <!-- Statistics Section -->
        <div id="statistics" class="admin-section">
            @await Html.PartialAsync("_StatisticsPartial")
            <component type="typeof(WebBanHang1.Views.Shared.Components.RevenueChart)" render-mode="ServerPrerendered" />
            <div class="row g-4 mb-4">
                <!-- Card tổng số khách hàng -->
                <div class="col-md-3">
                    <div class="card stat-card bg-secondary text-white">
                        <div class="card-body d-flex flex-column align-items-start">
                            <h5 class="card-title">Khách hàng</h5>
                            <h3 class="card-text">@ViewBag.TotalCustomers</h3>
                            <a href="@Url.Action("Customers", "Admin")" class="btn btn-light btn-sm mt-2"><i class="fas fa-users me-1"></i>Quản lý khách hàng</a>
                        </div>
                    </div>
                </div>
                @* ... các card khác ... *@
            </div>
            <!-- Top khách hàng mới nhất -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-secondary text-white d-flex align-items-center justify-content-between">
                    <span><i class="fas fa-user-plus me-2"></i>Top 5 khách hàng mới nhất</span>
                    <a href="@Url.Action("Customers", "Admin")" class="btn btn-outline-light btn-sm"><i class="fas fa-users"></i> Xem tất cả</a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Mã KH</th>
                                    <th>Họ Tên</th>
                                    <th>Email</th>
                                    <th>Điện Thoại</th>
                                    <th>Ngày tạo</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var kh in ViewBag.LatestCustomers as List<WebBanHang1.Models.KhachHang>)
                                {
                                    <tr>
                                        <td>@kh.MaKh</td>
                                        <td>@kh.HoTen</td>
                                        <td>@kh.Email</td>
                                        <td>@kh.DienThoai</td>
                                        <td>@kh.NgaySinh.ToString("dd/MM/yyyy")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Products Section -->
        <div id="products" class="admin-section" style="display:none;">
            <div class="section-header">
                <h2>Quản lý sản phẩm</h2>
                <div class="filter-group">
                    <a href="@Url.Action("Create", "Products")" class="btn-primary">
                        <i class="fas fa-plus"></i> Thêm sản phẩm
                    </a>
                </div>
            </div>

            <table class="table">
                <thead>
                    <tr>
                        <th>Hình ảnh</th>
                        <th>Tên sản phẩm</th>
                        <th>Giá</th>
                        <th>Tồn kho</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model.Products)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(product.Hinh))
                                {
                                    <img src="~/images/@product.Hinh" class="product-image" alt="@product.TenHh">
                                }
                                else
                                {
                                    <div class="product-image-placeholder">
                                        <i class="fas fa-image"></i>
                                    </div>
                                }
                            </td>
                            <td>@product.TenHh</td>
                            <td>@product.DonGia.ToString("C", culture)</td>
                            <td>@product.SoLuong</td>
                            <td>
                                <div class="action-buttons">
                                    <a href="@Url.Action("Edit", "Products", new { id = product.MaHh })"
                                       class="btn-edit"
                                       data-bs-toggle="tooltip"
                                       title="Sửa sản phẩm">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", "Products", new { id = product.MaHh })"
                                       class="btn-delete"
                                       data-bs-toggle="tooltip"
                                       title="Xóa sản phẩm">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="pagination">
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <a href="@Url.Action("Index", new { page = i })"
                       class="@(i == ViewBag.CurrentPage ? "active" : "")">
                        @i
                    </a>
                }
            </div>
        </div>

        <!-- Categories Section -->
        <div id="categories" class="admin-section" style="display:none;">
            <div class="section-header">
                <h2>Quản lý danh mục</h2>
                <a href="@Url.Action("Create", "LoaiSanPham")" class="btn-primary">
                    <i class="fas fa-plus"></i> Thêm danh mục
                </a>
            </div>

            <table class="table">
                <thead>
                    <tr>
                        <th>Tên danh mục</th>
                        <th>Số sản phẩm</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var loai in Model.LoaiSanPhams)
                    {
                        <tr>
                            <td>@loai.TenLoai</td>
                            <td>@(loai.HangHoas?.Count ?? 0)</td>
                            <td>
                                <div class="action-buttons">
                                    <a href="@Url.Action("Edit", "LoaiSanPham", new { id = loai.MaLoai })"
                                       class="btn-edit"
                                       data-bs-toggle="tooltip"
                                       title="Sửa danh mục">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", "LoaiSanPham", new { id = loai.MaLoai })"
                                       class="btn-delete"
                                       data-bs-toggle="tooltip"
                                       title="Xóa danh mục">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Orders Section -->
        <div id="orders" class="admin-section" style="display:none;">
            <div class="section-header">
                <h2>Quản lý đơn hàng</h2>
                <div class="filter-group">
                    <select class="form-select" id="statusFilter">
                        <option value="">Tất cả trạng thái</option>
                        <option value="success">Thành công</option>
                        <option value="pending">Đang xử lý</option>
                        <option value="cancelled">Đã hủy</option>
                    </select>
                </div>
            </div>

            <table class="table">
                <thead>
                    <tr>
                        <th>Mã ĐH</th>
                        <th>Ngày đặt</th>
                        <th>Khách hàng</th>
                        <th>Trạng thái</th>
                        <th>Tổng tiền</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.Orders)
                    {
                        var statusClass = order.MaTrangThaiNavigation.TenTrangThai switch
                        {
                            "Xử lý thành công" => "status-success",
                            "Đã hủy" => "status-cancelled",
                            _ => "status-pending"
                        };

                        <tr data-status="@statusClass.Replace("status-", "")">
                            <td>#@order.MaHd</td>
                            <td>@order.NgayDat.ToString("dd/MM/yyyy")</td>
                            <td>@order.MaKhNavigation.HoTen</td>
                            <td>
                                <span class="status-badge @statusClass">
                                    @order.MaTrangThaiNavigation.TenTrangThai
                                </span>
                            </td>
                            <td>
                                @{
                                    var total = order.ChiTietHds.Sum(c => c.SoLuong * c.DonGia);
                                    var discount = 0m;

                                    if (order.MaGiamGiaNavigation != null)
                                    {
                                        if (order.MaGiamGiaNavigation.LoaiGiamGia == "Phần trăm")
                                        {
                                            discount = total * (order.MaGiamGiaNavigation.GiaTriGiam / 100);
                                        }
                                        else
                                        {
                                            discount = order.MaGiamGiaNavigation.GiaTriGiam;
                                        }
                                    }

                                    var finalTotal = total - discount + order.PhiVanChuyen;
                                }
                                @finalTotal.ToString("C", culture)
                            </td>
                            <td>
                                <a href="@Url.Action("OrderDetails", "Admin", new { id = order.MaHd })"
                                   class="btn-primary btn-sm"
                                   data-bs-toggle="tooltip"
                                   title="Xem chi tiết">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Customers Section -->
        <div id="customers" class="admin-section" style="display:none;">
            <div class="section-header">
                <h2>Quản lý khách hàng</h2>
                <a href="@Url.Action("AddCustomer", "Admin")" class="btn-primary">
                    <i class="fas fa-user-plus"></i> Thêm khách hàng
                </a>
            </div>
            <table class="table">
                <thead>
                    <tr>
                        <th>Mã KH</th>
                        <th>Họ tên</th>
                        <th>Email</th>
                        <th>Điện thoại</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var kh in ViewBag.AllCustomers as List<WebBanHang1.Models.KhachHang>)
                    {
                        <tr>
                            <td>@kh.MaKh</td>
                            <td>@kh.HoTen</td>
                            <td>@kh.Email</td>
                            <td>@kh.DienThoai</td>
                            <td>
                                <div class="action-buttons">
                                    <a href="@Url.Action("CustomerDetails", "Admin", new { id = kh.MaKh })" class="btn-view" data-bs-toggle="tooltip" title="Xem chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="@Url.Action("EditCustomer", "Admin", new { id = kh.MaKh })" class="btn-edit" data-bs-toggle="tooltip" title="Sửa khách hàng">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form asp-action="DeleteCustomerConfirmed" asp-controller="Admin" method="post" style="display:inline;">
                                        <input type="hidden" name="id" value="@kh.MaKh" />
                                        <button type="submit" class="btn-delete" data-bs-toggle="tooltip" title="Xóa khách hàng" onclick="return confirm('Bạn có chắc chắn muốn xóa khách hàng này?');">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Promotions Section -->
        <div id="promotions" class="admin-section" style="display:none;">
            @* Content will be loaded here via AJAX *@
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Khởi tạo event listeners
        document.querySelectorAll('.sidebar a').forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                const section = this.dataset.section;
                loadSection(section);
            });
        });

        async function loadSection(section) {
            try {
                showLoading(true);

                // Ẩn tất cả các section
                document.querySelectorAll('.admin-section').forEach(div => {
                    div.style.display = 'none';
                });

                // Hiển thị section được chọn
                const activeSection = document.getElementById(section);
                if (activeSection) {
                    if (section === 'promotions') {
                        // Load promotions partial view via AJAX
                        const response = await fetch('/AdminPromotion'); // Assuming the Index action is at /AdminPromotion
                        if (response.ok) {
                            const html = await response.text();
                            activeSection.innerHTML = html;
                        } else {
                            activeSection.innerHTML = '<p>Error loading promotions.</p>';
                            console.error('Failed to load promotions section:', response.statusText);
                        }
                    }
                    activeSection.style.display = 'block'; // Display the section after content is loaded/set
                }

                // Cập nhật active menu
                document.querySelectorAll('.sidebar a').forEach(link => {
                    link.classList.remove('active');
                    if (link.dataset.section === section) {
                        link.classList.add('active');
                    }
                });

            } catch (error) {
                console.error('Lỗi tải section:', error);
                alert('Có lỗi xảy ra khi tải dữ liệu');
            } finally {
                showLoading(false);
            }
        }

        function showLoading(show) {
            document.querySelector('.loading-overlay').style.display = show ? 'flex' : 'none';
        }

        // Xử lý filter đơn hàng
        document.getElementById('statusFilter').addEventListener('change', function() {
            const status = this.value;
            filterOrders(status);
        });

        function filterOrders(status) {
            document.querySelectorAll('#orders tbody tr').forEach(row => {
                const rowStatus = row.getAttribute('data-status');
                const shouldShow = !status || rowStatus === status;
                row.style.display = shouldShow ? '' : 'none';
            });
        }

        // Confirm before delete
        document.querySelectorAll('.btn-delete').forEach(btn => {
            btn.addEventListener('click', function(e) {
                if (!confirm('Bạn có chắc chắn muốn xóa?')) {
                    e.preventDefault();
                }
            });
        });

        // Khởi tạo tooltip
        const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        tooltipTriggerList.forEach(tooltipTriggerEl => {
            new bootstrap.Tooltip(tooltipTriggerEl);
        });

        // Khởi tạo ban đầu
        document.addEventListener('DOMContentLoaded', () => {
            loadSection('statistics');
        });

        // Script for promotions management (moved from Partial View)
        function deletePromotion(maGiamGia) {
