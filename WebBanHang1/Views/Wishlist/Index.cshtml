@model IEnumerable<WebBanHang1.Models.Wishlist>

@{
    ViewData["Title"] = "Danh sách yêu thích";
}

<div class="container py-4">
    <h2 class="mb-4">Danh sách yêu thích</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            Bạn chưa có sản phẩm nào trong danh sách yêu thích.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3 mb-4">
                    <div class="card h-100">
                        <img src="~/images/products/@item.MaHhNavigation.Hinh" class="card-img-top" alt="@item.MaHhNavigation.TenHh">
                        <div class="card-body">
                            <h5 class="card-title">@item.MaHhNavigation.TenHh</h5>
                            <p class="card-text text-muted">@item.MaHhNavigation.MaLoaiNavigation.TenLoai</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    @if (item.MaHhNavigation.GiamGia > 0)
                                    {
                                        <span class="text-decoration-line-through text-muted">
                                            @item.MaHhNavigation.DonGia.ToString("N0") đ
                                        </span>
                                        <span class="text-danger ms-2">
                                            @((item.MaHhNavigation.DonGia * (1 - item.MaHhNavigation.GiamGia / 100)).ToString("N0")) đ
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-primary">@item.MaHhNavigation.DonGia.ToString("N0") đ</span>
                                    }
                                </div>
                                <button class="btn btn-danger btn-sm remove-wishlist" data-id="@item.MaWishlist">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-footer bg-white border-top-0">
                            <a href="@Url.Action("Details", "Home", new { id = item.MaHhNavigation.MaHh })" 
                               class="btn btn-primary w-100">
                                Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.remove-wishlist').click(function() {
                var wishlistId = $(this).data('id');
                var card = $(this).closest('.col-md-3');

                $.post('@Url.Action("RemoveFromWishlist", "Wishlist")', { wishlistId: wishlistId })
                    .done(function(response) {
                        if (response.success) {
                            card.fadeOut(300, function() {
                                $(this).remove();
                                if ($('.col-md-3').length === 0) {
                                    location.reload();
                                }
                            });
                            showToast('Đã xóa khỏi danh sách yêu thích', 'success');
                        } else {
                            showToast(response.message, 'error');
                        }
                    })
                    .fail(function() {
                        showToast('Có lỗi xảy ra', 'error');
                    });
            });
        });

        function showToast(message, type) {
            const toast = document.getElementById('toastMsg');
            toast.className = `toast align-items-center text-bg-${type === 'success' ? 'success' : 'danger'} border-0`;
            toast.querySelector('.toast-body').textContent = message;
            const bsToast = new bootstrap.Toast(toast);
            bsToast.show();
        }
    </script>
} 